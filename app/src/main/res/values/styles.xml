<resources>


    <style name="Women" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/Theme.WtfPreference</item>
        <item name="colorPrimary">?attr/myPrim</item>
        <item name="colorPrimaryDark">?attr/myPrimDark</item>
        <item name="colorAccent">?attr/myAccent</item>
        <item name="background">?attr/myBackColor</item>

        <item name="beep">@raw/women</item>
        <item name="header">@drawable/header</item>
        <item name="background_workout">@drawable/womens_background_workout</item>
        <item name="background_statistics">@drawable/womens_background_statistics</item>
        <item name="dashboard_exercise">@drawable/wordcloud_yoga_man</item>
        <item name="dashboard_routine">@drawable/dashboard_routine_black</item>
        <item name="dashboard_workout">@drawable/dashboard_clock_black</item>
        <item name="dashboard_history">@drawable/dashboard_trending_black</item>

